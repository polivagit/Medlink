<Page x:ConnectionId='1'
    x:Class="UWP_MedlinkApp.View.Pages.PatientsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_MedlinkApp.View.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Light"
    x:Name="Patients"
                            >

    <Grid Background="CadetBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- CONNECTED DOCTOR INFO -->
        <Grid Grid.Row="0" BorderBrush="Black" BorderThickness="2" CornerRadius="20"
              Margin="5" Padding="10" Background="LightBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock Text="-- CURRENT DOCTOR INFO --" FontWeight="Bold" FontSize="20"></TextBlock>
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <!-- DOCTOR'S USERNAME -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Username :" FontWeight="Bold"></TextBlock>
                    <TextBlock x:ConnectionId='29' x:Name="tbkDoctorUsername" Margin="10,0,0,0"
                            Text="{Binding Pers_login_username, FallbackValue='MED_PGotera'}"></TextBlock>
                </StackPanel>

                <!-- DOCTOR'S EMAIL -->
                <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
                    <TextBlock Text="eMail :" FontWeight="Bold"></TextBlock>
                    <TextBlock x:ConnectionId='28' x:Name="tbkDoctorEmail" Margin="10,0,0,0"
                            Text="{Binding Pers_email, FallbackValue='pgotera@gmail.com'}"></TextBlock>
                </StackPanel>
                
                <!-- DOCTOR'S FULL NAME -->
                <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
                    <TextBlock Text="Full name :" FontWeight="Bold"></TextBlock>
                    <TextBlock x:ConnectionId='27' x:Name="tbkDoctorFullName" Margin="10,0,0,0"
                            Text="{Binding Pers_FullName, FallbackValue='Pepe Gotera'}"></TextBlock>
                </StackPanel>

                <!-- DOCTOR'S SPECIALTY ID -->
                <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
                    <TextBlock Text="Specialty :" FontWeight="Bold"></TextBlock>
                    <TextBlock x:ConnectionId='26' x:Name="tbkDoctorSpecialtyName" Margin="10,0,0,0"
                            Text="{Binding Pers_SpecialtyName, FallbackValue='Pediatrics'}"></TextBlock>
                </StackPanel>
                
                <!-- DOCTOR'S COLLEGIATE UID -->
                <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
                    <TextBlock Text="Collegiate UID :" FontWeight="Bold"></TextBlock>
                    <TextBlock x:ConnectionId='25' x:Name="tbkDoctorCollegiateUid" Margin="10,0,0,0"
                            Text="{Binding Pers_doct_collegiate_uid, FallbackValue='XX-YYY-AAAAA'}"></TextBlock>
                </StackPanel>
            </StackPanel>

            <Grid Grid.Column="1">

            </Grid>

            <Grid Grid.Column="2">

            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="10*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- PATIENT LIST -->
            <Grid Grid.Column="0" Padding="10" Background="LightBlue" Margin="5"
                  BorderBrush="Black" BorderThickness="2" CornerRadius="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="-- PATIENTS --" Margin="10" FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </Grid>

                <Grid Grid.Row="1">
                    <controls:DataGrid x:ConnectionId='24' x:Name="dtgPatients" Background="white" Grid.Row="1" HorizontalAlignment="Stretch" AutoGenerateColumns="False"
                                                                               BorderBrush="Black" BorderThickness="4">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn 
                                Header="ID"
                                Binding="{Binding Pers_id}">
                            </controls:DataGridTextColumn>
                            <controls:DataGridTextColumn 
                                Header="NIF"
                                Binding="{Binding Pers_nif}">
                            </controls:DataGridTextColumn>
                            <controls:DataGridTextColumn 
                                Header="FULL_NAME"
                                Binding="{Binding Pers_FullName}">
                            </controls:DataGridTextColumn>
                            <controls:DataGridTextColumn 
                                Header="GENDER"
                                Binding="{Binding Pers_phone_number}">
                            </controls:DataGridTextColumn>
                            <controls:DataGridTextColumn 
                                Header="BIRTHDATE"
                                Binding="{Binding Pers_birthdate}">
                            </controls:DataGridTextColumn>
                            <controls:DataGridTextColumn 
                                Header="PHONE_NUMBER"
                                Binding="{Binding Pers_phone_number}">
                            </controls:DataGridTextColumn>
                            <controls:DataGridTextColumn 
                                Header="IS_CAREGIVER?"
                                Binding="{Binding Pers_is_caregiver}">
                            </controls:DataGridTextColumn>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="4*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Padding="10">
                        <Button x:ConnectionId='23' x:Name="btnRemovePatient"                                Content="&#59213;" FontSize="20" FontFamily="Segoe MDL2 Assets"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Background="IndianRed"></Button>
                    </Grid>

                    <Grid Grid.Column="2" Padding="10">
                        <Button x:ConnectionId='22' x:Name="btnEditPatient"                              Content="&#59151;" FontSize="20" Background="Orange"
                            FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Stretch" VerticalAlignment="Center"></Button>
                    </Grid>

                    <Grid Grid.Column="3" Padding="10">
                        <Button x:ConnectionId='21' x:Name="btnAddPatient"                             Content="&#59642;" FontSize="20" Background="LightGreen"
                            FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Stretch" VerticalAlignment="Center"></Button>
                    </Grid>
                </Grid>
            </Grid>

            <!-- PATIENTS' INFO & THEIR TREATMENT LIST -->
            <Grid Grid.Column="2">
                <!-- SELECTED PATIENT INFO -->
                <Grid Padding="10" Background="LightBlue" Margin="5"
                  BorderBrush="Black" BorderThickness="2" CornerRadius="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="2*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <!-- NIF -->
                            <Grid Grid.Column="0" Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                    <TextBlock Text="NIF :" FontWeight="Bold"></TextBlock>
                                </Grid>
                                <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                    <TextBox x:ConnectionId='20' x:Name="txbPatientNif"></TextBox>
                                </Grid>
                            </Grid>

                            <!-- BIRTHDATE -->
                            <Grid Grid.Column="1" Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                    <TextBlock Text="BIRTHDATE :" FontWeight="Bold"></TextBlock>
                                </Grid>
                                <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                    <CalendarDatePicker x:ConnectionId='19' x:Name="cdpPatientBirthdate"></CalendarDatePicker>
                                </Grid>
                            </Grid>

                            <!-- IS_CAREGIVER? -->
                            <Grid Grid.Column="2" Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                    <TextBlock Text="IS CAREGIVER? :" FontWeight="Bold"></TextBlock>
                                </Grid>
                                <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                    <CheckBox x:ConnectionId='18' x:Name="chkPatientIsCaregiver"></CheckBox>
                                </Grid>
                            </Grid>
                        </Grid>

                        <!-- NAME -->
                        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <!-- FIRST_NAME -->
                            <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="FIRST NAME :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='17' x:Name="txbPatientFirstName"></TextBox>
                            </Grid>

                            <!-- LAST_NAME_1 -->
                            <Grid Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="LAST NAME 1 :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='16' x:Name="txbPatientLastName1"></TextBox>
                            </Grid>

                            <!-- LAST_NAME_2 -->
                            <Grid Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <TextBlock Text="LAST NAME 2 :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='15' x:Name="txbPatientLastName2"></TextBox>
                            </Grid>
                        </Grid>

                        <!-- PHONE NUMBER -->
                        <Grid Grid.Column="0" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBlock Text="PHONE NUMBER :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='14' x:Name="txbPatientPhoneNumber"></TextBox>
                            </Grid>
                        </Grid>

                        <!-- EMAIL -->
                        <Grid Grid.Column="1" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBlock Text="EMAIL :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='13' x:Name="txbPatientEmail"></TextBox>
                            </Grid>
                        </Grid>

                        <!-- GENDER -->
                        <Grid Grid.Column="0" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBlock Text="GENDER :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <ComboBox x:ConnectionId='12' x:Name="cboPatientGender" HorizontalAlignment="Stretch"></ComboBox>
                            </Grid>
                        </Grid>

                        <!-- ADDRESS -->
                        <Grid Grid.Column="1" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="CITY :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='11' x:Name="txbPatientAddressCity"></TextBox>
                            </Grid>

                            <Grid Grid.Column="0"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="POSTAL CODE :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='10' x:Name="txbPatientAddressPostalCode"></TextBox>
                            </Grid>

                            <Grid Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="HOME ADDRESS :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='9' x:Name="txbPatientAddressHome"></TextBox>
                            </Grid>
                        </Grid>

                        <!-- USERNAME & PASSWORD -->
                        <Grid Grid.Column="0" Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="USER NAME :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='8' x:Name="txbPatientUsername"></TextBox>
                            </Grid>

                            <Grid Grid.Column="0"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="USER PASSWORD :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='7' x:Name="txbPatientPassword"></TextBox>
                            </Grid>
                        </Grid>

                        <!-- HEIGHT & WEIGHT -->
                        <Grid Grid.Column="1" Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="HEIGHT :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='6' x:Name="txbPatientHeight"></TextBox>
                            </Grid>

                            <Grid Grid.Column="0"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="WEIGHT :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='5' x:Name="txbPatientWeight"></TextBox>
                            </Grid>
                        </Grid>

                        <!-- REMARKS -->
                        <Grid Grid.Column="0" Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="REMARKS :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <TextBox x:ConnectionId='4' x:Name="txbPatientRemarks"></TextBox>
                            </Grid>
                        </Grid>

                        <!-- CAREGIVER -->
                        <Grid Grid.Column="1" Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="CAREGIVER :" FontWeight="Bold"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <ComboBox x:ConnectionId='3' x:Name="cboPatientCaregiver" HorizontalAlignment="Stretch"></ComboBox>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1">
                        <TextBlock Text="-- ACTIVE TREATMENTS --" Margin="10" FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                    </Grid>

                    <Grid Grid.Row="2">
                        <controls:DataGrid x:ConnectionId='2' x:Name="dtgTreatments" Background="white" Grid.Row="1" HorizontalAlignment="Stretch" AutoGenerateColumns="False"
                               IsReadOnly="True" BorderBrush="Black" BorderThickness="4">
                            <controls:DataGrid.Columns>
                                <controls:DataGridTextColumn 
                                    Header="NAME"
                                    Binding="{Binding Trea_name}">
                                </controls:DataGridTextColumn>
                                <controls:DataGridTextColumn 
                                    Header="DATE_START"
                                    Binding="{Binding Trea_date_start}">
                                </controls:DataGridTextColumn>
                                <controls:DataGridTextColumn 
                                    Header="DATE_END"
                                    Binding="{Binding Trea_date_end}">
                                </controls:DataGridTextColumn>
                                <controls:DataGridTextColumn 
                                    Header="DESCRIPTION"
                                    Binding="{Binding Trea_description}">
                                </controls:DataGridTextColumn>
                            </controls:DataGrid.Columns>
                        </controls:DataGrid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>

