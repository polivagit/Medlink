<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llHome"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo_home"
    tools:context="ui.home.HomeFragment">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/medlink_with_name_big"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, welcome to Medlink!"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="20dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here you can find your dayly"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="1dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="medicines as well as your"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="1dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="medical treatments"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="1dp"></TextView>

</LinearLayout>